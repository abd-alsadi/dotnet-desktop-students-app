@inject SignInManager<ApplicationUser> SignInManager
@using PalestineLiberationArmyProject.Models.Core;
@inject UserManager<ApplicationUser> UserManager
@model List<clsFrmField>
@{
    ViewData["Title"] = "الصفحة الرئيسية";
   var id= ViewBag.fldformuid;
}
<h1>انشاء نسخة جديدة</h1>
<div class="row" style="width:60%; margin:20px; direction:rtl; text-align:center">
    <form asp-controller="FormInstance" asp-action="Store"  method="get" class="form-horizontal" >
        <input type="hidden" name="fldformuid" value="@id"/>
        @foreach (var field in Model)
        {
        <div class="form-group">

            <div class="col-md-10">
                <input type="text" name="field_@field.fldUID" class="form-control" />
                
            </div>
            <label class="col-md-2 control-label">@field.fldName</label>
        </div>

        }
        @if (Model.Count > 0)
        {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-info">اضافة</button>
                <button asp-controller="FormInstance" asp-action="Index" asp-route-fldformuid="@id" class="btn btn-default">الغاء</button>


            </div>
            
        </div>
        }


    </form>
</div>