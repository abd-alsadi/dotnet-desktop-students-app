@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<h2>قسم الأفراد</h2>
<div class="row" style=" direction:rtl">
    <div class="col-md-6">
     
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>.استخدم حساب محلي لتسجيل الدخول</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <label class="col-md-2 control-label">اسم المستخدم</label>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <label class="col-md-2 control-label">كلمة السر</label>

                </div>
                <div class="form-group" >
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                               
                                تدكر كلمة السر    
                                <span>     </span>
                                <input asp-for="RememberMe" />
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">تسجيل الدخول</button>
                    </div>
                </div>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">انشاء حساب جديد ؟</a>
                </p>
                <p>
                    <a asp-action="ForgotPassword">هل نسيت كلمة السر ؟</a>
                </p>
            </form>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
